<h2><%= @emovalue_option.user.slack_name %>さんの設定</h2>

<div class="center red-text">
  <p><%= flash[:notice] %></p>
</div>

<table class="highlight">
  <thead>
    <tr>
      <th data-field="label">サービス名</th>
      <th data-field="status">使用状況</th>
    </tr>

    <tbody>
      <tr>
        <td><%= EasySettings.models.emovalue_option.labels.use_take %></td>
        <td><%= @emovalue_option.display_use_take %></td>
      </tr>
      <tr>
        <td><%= EasySettings.models.emovalue_option.labels.decrease %></td>
        <td><%= @emovalue_option.display_decrease %></td>
      </tr>
      <tr>
        <td><%= EasySettings.models.emovalue_option.labels.increase %></td>
        <td><%= @emovalue_option.display_increase %></td>
      </tr>
      <tr>
        <td><%= EasySettings.models.emovalue_option.labels.slowdown %></td>
        <td><%= @emovalue_option.display_slowdown %></td>
      </tr>
      <tr>
        <td><%= EasySettings.models.emovalue_option.labels.regular %></td>
        <td><%= @emovalue_option.display_regular %></td>
      </tr>
      <tr>
        <td><%= EasySettings.models.emovalue_option.labels.push_guide %></td>
        <td><%= @emovalue_option.display_push_guide %></td>
      </tr>
    </tbody>
</table>

<%= form_tag edit_user_emovalue_option_path(user_id: @emovalue_option.user.id, id: @emovalue_option.id), method: :get do %>
  <%= submit_tag "編集", class: "btn waves-effect waves-light center" %>
<% end %>
